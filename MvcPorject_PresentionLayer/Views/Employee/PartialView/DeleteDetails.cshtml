@model Employeevm

@if (Model.ImageName is not null)
{
<div class="form-control">
        <img src="~/Files/Images/@Model.ImageName" class="rounded" width="200" height="200" />
</div>    
}
<input  hidden asp-for="ImageName"/>
<div>
    <label asp-for="Name">Name</label>
    <input class="form-control" asp-for="Name" readonly />
    <span asp-validation-for="Name" class="text-danger"></span>

</div>
<div>
    <label asp-for="Age">Age</label>
    <input class="form-control" asp-for="Age" readonly />
    <span asp-validation-for="Age" class="text-danger"></span>

</div>
<div>
    <label asp-for="Salary">Salary</label>
    <input class="form-control" asp-for="Salary" readonly />
    <span asp-validation-for="Salary" class="text-danger"></span>

</div>
<div>
    <label asp-for="Address">Address</label>
    <input class="form-control" asp-for="Address" readonly />
    <span asp-validation-for="Address" class="text-danger"></span>

</div>
<div>
    <label asp-for="Email">Email</label>
    <input class="form-control" asp-for="Email" readonly />
    <span asp-validation-for="Email" class="text-danger"></span>

</div>
<div>
    <label asp-for="Phone">Phone</label>
    <input class="form-control" asp-for="Phone" readonly />
    <span asp-validation-for="Phone" class="text-danger"></span>

</div>
<div>
    <label asp-for="IsActive">IsActive</label>
    <input class="form-check" asp-for="IsActive" readonly />
    <span asp-validation-for="IsActive" class="text-danger"></span>

</div>

