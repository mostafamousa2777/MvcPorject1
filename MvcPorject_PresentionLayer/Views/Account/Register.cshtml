@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" method="post">
			<div asp-validation-summary="All">

			</div>
			<input class="text" asp-for="Fname" placeholder="First Name" required="">
			<span asp-validation-for="Fname" class="text-danger"></span>

			<input class="text" asp-for="LName" placeholder="Last Name" required="">
			<span asp-validation-for="LName" class="text-danger"></span>

			<input class="text" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>

			<input class="text" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>

			<input class="text" asp-for="ConfirmPassword" placeholder="ConfirmPassword" required="">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="Agree"  class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section Validation {

	<partial name="_ValidationScriptsPartial"></partial>


}


