@model LoginVM
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" method="post">
			<div asp-validation-summary="All">
			</div>
		
			

			<input class="text" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>

			<input class="text" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>

			
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="Rememberme" class="checkbox" required="">
					<span>Keep Me Sigend in</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
		<p><a asp-action="ForgetPassword"> Forget Password</a></p>
	</div>
</div>
@section Validation {

	<partial name="_ValidationScriptsPartial"></partial>


}


