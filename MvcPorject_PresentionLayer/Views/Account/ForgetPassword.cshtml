@model Forget_PasswordVM

@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="ForgetPassword" method="post">
			<div asp-validation-summary="All">
			</div>
		
			

			<input class="text" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>

			
			
			
			<input type="submit" value="ResetPassword">
		</form>
		<p> <a asp-action="Login"> Back</a></p>
	</div>
</div>
@section Validation {

	<partial name="_ValidationScriptsPartial"></partial>


}


