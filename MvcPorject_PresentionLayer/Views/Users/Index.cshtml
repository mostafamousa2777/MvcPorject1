@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "Users";
}
<a class="btn btn-outline-success mt-3" asp-action="Create"> create new employee</a>


@if (Model.Count() > 0)
{
    <h1 class="mt-5">All employees</h1>
    <form class="row" asp-action="Index">
        <div class="col-10">
            <input class="form-control" type="text" placeholder="user name" name="SearchValue" />
        </div>
        <div class="col-2">
            <input type="submit" class="btn-dark" value="search" />
        </div>
    </form>
    <table class="table table-dark table-sm mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(m => m.Id)</td>

                <td>@Html.DisplayNameFor(m => m.Fname)</td>
                <td>@Html.DisplayNameFor(m => m.LName)</td>
                <td>@Html.DisplayNameFor(m => m.Email)</td>
                <td>@Html.DisplayNameFor(m => m.Roles)</td>

               








                <td>Details</td>
                <td>update</td>

                <td>Delete</td>



            </tr>

        </thead>
        <tbody>
            @foreach (var users in Model)
            {
                <tr>

                    <td>@users.Id</td>
                    <td>@users.Fname</td>
                    <td>@users.LName</td>
               

                    <td>@Html.DisplayFor(e => users.Email)</td>
                    <td>@string.Join(",",users.Roles)</td>


                   





                    <partial name="_ButtonPartialView" model=@users.Id.ToString()></partial>





                </tr>

            }
        </tbody>
    </table>

}

else
{
    <h1 class="alert-dark mt-5">have no users</h1>


}



