
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-outline-success mt-3" asp-action="Create"> create new department</a>
<h1>@TempData["mes"]</h1>

@if (Model.Count() > 0)
{
    <h1 class="mt-5">All Department</h1>
    <table class="table table-dark table-sm mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(m => m.Code)</td>
                <td>@Html.DisplayNameFor(m => m.Name)</td>

                <td>@Html.DisplayNameFor(m => m.CreatedAt)</td>
                <td>Details</td>
                <td>update</td>

                <td>Delete</td>



            </tr>

        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>

                    <td>@department.CreatedAt</td>

                    <partial name="_ButtonPartialView" model=@department.Id.ToString()></partial>




                </tr>

            }
        </tbody>
    </table>

}

else{
    <h1 class="alert-dark mt-5">have no department</h1>


}


